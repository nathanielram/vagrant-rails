{
  "name": "server",

  "description": "A server",
  
  "default_attributes": {
    "apt" : {
      "unattended_upgrades" : {
        "enable" : true,
        "allowed_origins" : [
          "${distro_id} stable",
          "${distro_id} ${distro_codename}-security"
        ],
        "automatic_reboot" : true
      }
    },
    "rbenv":{
      "rubies": ["2.1.5"],
      "global" : "2.1.5",
      "gems": {
        "2.1.5" : [
          {"name":"bundler"}
        ]
      }
    }
  },


  "json_class": "Chef::Role",


  "run_list": [
    "recipe[apt::unattended-upgrades]",
    "recipe[postgresql::server]",
    "recipe[postgresql::libpq]",
    "rails_gem_dependencies-tlq",
    "ruby_build",
    "rbenv::system"
  ],


  "chef_type": "role",

  
  "override_attributes": {}
}
